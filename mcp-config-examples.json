  "usage": {
    "_comment": "How to use these examples",
    "steps": [
      "1. Copy the appropriate config from linux_macos or windows section",
      "2. Replace the path placeholder with your actual mempool-mcp installation path",
      "3. Add to ~/.claude.json under 'mcpServers.mempool'",
      "4. Restart Claude Code"
    ],
    "example_claude_json_linux": {
      "mcpServers": {
        "mempool": {
          "type": "stdio",
          "command": "/home/youruser/mempool-mcp/venv/bin/python",
          "args": ["-m", "mempool_mcp.server"],
          "env": {
            "MEMPOOL_API_URL": "https://mempool.space/api"
          }
        }
      }
    },
    "example_claude_json_windows": {
